alias snano='sudo nano'

alias upgrade='sudo apt update && sudo apt upgrade'
alias install='sudo apt update && sudo apt install'
alias installpkg='sudo dpkg -i'
alias aptfix='sudo apt --fix-broken install'

alias ls='ls -1l --color=auto'
alias als='ls -a1l --color=auto'
alias rls='ls -Ra1l --color=auto'

alias sysstart='sudo systemctl start'
alias sysstop='sudo systemctl stop'
alias sysreload='sudo systemctl reload'
alias sysrestart='sudo systemctl restart'

alias reboot='sudo reboot'
alias shutdown='sudo shutdown'

